<div class="book">
  <div class="book_cover_image">
    <img src="<%= "https://covers.openlibrary.org/b/isbn/#{@book.isbn_13}-M.jpg" %>" />
  </div>
  <div class="book_details">
    <div class="book_details_title">
      <%= @book.title %>
    </div>
    <div class="book_details_author">
      Author: <%= @book.author %>
    </div>
    <div class="book_details_genre">
      Genre: <%= @book.genre %>
    </div>
    <div class="book_details_description">
      Description:
      <p><%= @book.description %></p>
    </div>
  </div>
</div>
