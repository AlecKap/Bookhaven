<main class="container">
  <h1>Add a Library</h1>
  <div class="library_form">
    <%= form_with(model: @library, local: true) do |f| %>
      <div class="field">
        <%= f.label :name %>:
        <%= f.text_field :name %>
      </div>
      <br>
      <div class="field">
        <%= f.label :address %>:
        <%= f.text_field :address %>
      </div>
      <br>
      <div class="field">
        <%= f.label :city %>:
        <%= f.text_field :city %>
      </div>
      <br>
      <div class="field">
        <%= f.label :state %>:
         <%= f.collection_select :state, state_options, :first, :last, prompt: 'Select a state' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Add Library", class: "btn btn--submit" %>
      </div>
    <% end %>
  </div>
</main>